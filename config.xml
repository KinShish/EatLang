        <icon src="src/assets/appIcon/android/icon/144.png" density="xxhdpi" foreground="src/assets/appIcon/android/icon/144.png" background="src/assets/appIcon/android/icon/144.png"/>
        <icon src="src/assets/appIcon/android/icon/192.png" density="xxxhdpi" foreground="src/assets/appIcon/android/icon/192.png" background="src/assets/appIcon/android/icon/192.png"/>


