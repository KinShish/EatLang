<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.vtr" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ВТР</name>
    <description>
        Описание приложения
    </description>
    <author email="developer@alna.ru" href="">
        ООО АЛНА
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="src/assets/appIcon/android/icon/icon_36.png" density="ldpi" foreground="src/assets/appIcon/android/icon/icon_36.png"/>
        <icon src="src/assets/appIcon/android/icon/icon_48.png" density="mdpi" foreground="src/assets/appIcon/android/icon/icon_48.png" />
        <icon src="src/assets/appIcon/android/icon/icon_72.png" density="hdpi" foreground="src/assets/appIcon/android/icon/icon_72.png" />
        <icon src="src/assets/appIcon/android/icon/icon_96.png" density="xhdpi" foreground="src/assets/appIcon/android/icon/icon_96.png" />
        <icon src="src/assets/appIcon/android/icon/icon_144.png" density="xxhdpi" foreground="src/assets/appIcon/android/icon/icon_144.png" />
        <icon src="src/assets/appIcon/android/icon/icon_192.png" density="xxxhdpi" foreground="src/assets/appIcon/android/icon/icon_192.png" />

        <splash src="src/assets/appIcon/android/load/load_480x800.png" density="port-hdpi"/>
        <splash src="src/assets/appIcon/android/load/load_200x230.png" density="port-ldpi"/>
        <splash src="src/assets/appIcon/android/load/load_320x400.png" density="port-mdpi"/>
        <splash src="src/assets/appIcon/android/load/load_720x1280.png" density="port-xhdpi"/>
        <splash src="src/assets/appIcon/android/load/load_1280x1920.png" density="port-xxhdpi"/>
    </platform>
    <platform name="ios">
        <preference name="KeyboardDisplayRequiresUserAction" value="false" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="src/assets/appIcon/ios/load/icon_2208x1242.png"/>
        <icon src="src/assets/appIcon/ios/icon/icons_180.png" height="180"  width="180"/>
        <icon src="src/assets/appIcon/ios/icon/icons_60.png" height="60"  width="60"/>
        <icon src="src/assets/appIcon/ios/icon/icons_120.png" height="120"  width="120"/>
        <icon src="src/assets/appIcon/ios/icon/icons_76.png" height="76"  width="76"/>
        <icon src="src/assets/appIcon/ios/icon/icons_152.png" height="152"  width="152"/>
        <icon src="src/assets/appIcon/ios/icon/icons_40.png" height="40"  width="40"/>
        <icon src="src/assets/appIcon/ios/icon/icons_80.png" height="80"  width="80"/>
        <icon src="src/assets/appIcon/ios/icon/icons_57.png" height="57"  width="57"/>
        <icon src="src/assets/appIcon/ios/icon/icons_114.png" height="114"  width="114"/>
        <icon src="src/assets/appIcon/ios/icon/icons_72.png" height="72"  width="72"/>
        <icon src="src/assets/appIcon/ios/icon/icons_144.png" height="144"  width="144"/>
        <icon src="src/assets/appIcon/ios/icon/icons_167.png" height="167"  width="167"/>
        <icon src="src/assets/appIcon/ios/icon/icons_29.png" height="29"  width="29"/>
        <icon src="src/assets/appIcon/ios/icon/icons_58.png" height="58"  width="58"/>
        <icon src="src/assets/appIcon/ios/icon/icons_87.png" height="87"  width="87"/>
        <icon src="src/assets/appIcon/ios/icon/icons_50.png" height="50"  width="50"/>
        <icon src="src/assets/appIcon/ios/icon/icons_100.png" height="100"  width="100"/>
        <icon src="src/assets/appIcon/ios/icon/icons_55.png" height="55"  width="55"/>
        <icon src="src/assets/appIcon/ios/icon/icons_172.png" height="172"  width="172"/>
        <icon src="src/assets/appIcon/ios/icon/icons_196.png" height="196"  width="196"/>
        <icon src="src/assets/appIcon/ios/icon/icons_216.png" height="216"  width="216"/>
        <icon src="src/assets/appIcon/ios/icon/icons_48.png" height="48"  width="48"/>
        <icon src="src/assets/appIcon/ios/icon/icons_88.png" height="88"  width="88"/>
        <icon src="src/assets/appIcon/ios/icon/icons_20.png" height="20"  width="20"/>
        <icon src="src/assets/appIcon/ios/icon/icons_167.png" height="167"  width="167"/>
        <icon src="src/assets/appIcon/ios/icon/icons_512.png" height="512"  width="512"/>
        <icon src="src/assets/appIcon/ios/icon/icons_1024.png" height="1024"  width="1024"/>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Данные о вашем местоположении могут быть использованы при подаче и поиске объявлений</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Приложению нужен доступ к камере что бы делать фотографии для логотипа пользователя</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>Приложению нужен доступ к галреее, что бы прикрепить фотографиюю к логотипу пользователя</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
            <string>Данные о вашем местоположении могут быть использованы при подаче и поиске объявлений</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
            <string>Приложению нужен доступ к галреее, что бы прикрепить фотографиюю к логотипу пользователя</string>
        </edit-config>
    </platform>
</widget>
